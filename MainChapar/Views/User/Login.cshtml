@model MainChapar.Models.DTO.LoginDTO
@{
    // Layout = "~/Views/Shared/_newLayout1.cshtml";
        
    Layout = null;  // یعنی هیچ لای‌آوتی استفاده نشه
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/assets/login/styles.css">
    <title>ورود</title>

</head>
<div class="container">

    <div class="left">
        <h2>به چاپار خوش آمدید</h2>

        <p>اطلاعات خود را وارد کنید</p>
        <form method="post" asp-controller="User" asp-action="Login">
            <a href="@Url.Action("Register", "User")" class="btn-add">هنوز ثبت نام نکردید؟</a>
            @if (!ViewData.ModelState.IsValid)
            {
                <div style="background-color: #fff4f4; border: 1px solid #e44d4d; padding: 12px 16px; border-radius: 10px; margin: 20px auto; color: #c0392b; max-width: 600px; font-size: 14px;">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <div class="input-group">
                <input asp-for="UserName" type="text" placeholder="نام کاربری" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="input-group">
                <input asp-for="Password" type="password" placeholder="رمز عبور" />
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn-signup">ورود</button>
        </form>

    </div>


    <div class="right">
        <img src="~/assets/login/files/image (1).jpg" alt="">
    </div>
</div>

