@model MainChapar.Models.User
@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/user information/styles.css">

    <title>اطلاعات کاربری</title>
</head>
<body>

   
        <h2>اطلاعات کاربری</h2>
  

    <form class="mainForm" method="post" enctype="multipart/form-data">
        <img src="~/assets/img/files/user-icon.png" class="circle-img" />

        <div class="form-group">
            <label>نام:</label>
            <p id="info">@Model.Name</p>
        </div>

        <div class="form-group">
            <label>نام خانوادگی:</label>
            <p id="info">@Model.LName</p>
        </div>

        <div class="form-group">
            <label>نام کاربری:</label>
            <p id="info">@Model.UserName</p>
        </div>

        <div class="form-group">
            <label>آدرس ایمیل:</label>
            <p id="info">@Model.Email</p>
        </div>

        <div class="form-group">
            <label>شماره تماس:</label>
            <p id="info">@Model.PhoneNumber</p>
        </div>

        <div class="form-group" style="text-align: center;" id="skills">
            <button type="submit">ویرایش</button>
        </div>
    </form>

    @if (User.IsInRole("admin"))
    {
        <div class="form-group" style="text-align: center;" id="skills">
            <a href="/Admin/Dashboard/Index" class="btn btn-warning"><button>ورود به داشبورد ادمین</button></a>
        </div>
    }

 
</body>
