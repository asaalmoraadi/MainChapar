@model MainChapar.ViewModel.CartViewModel

<!DOCTYPE html>
<html lang="fa">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>سبد خرید من</title>
<style>
  body {
    font-family: Vazir, Tahoma, sans-serif;
    direction: rtl;
    background: #f5f5f5;
    margin: 0;
    padding: 20px;
  }
  h1 {
    color: #333;
    margin-bottom: 20px;
  }
  .cart-container {
    max-width: 800px;
    margin: 0 auto;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    padding: 20px;
  }
  .cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 12px 0;
  }
  .cart-item:last-child {
    border-bottom: none;
  }
  .item-info {
    flex: 2;
  }
  .item-name {
    font-weight: 600;
    font-size: 1.1em;
    color: #222;
  }
  .item-details {
    font-size: 0.9em;
    color: #666;
    margin-top: 4px;
  }
  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .quantity-controls button {
    background: #008CFF;
    border: none;
    color: white;
    font-weight: bold;
    width: 30px;
    height: 30px;
    border-radius: 4px;
    cursor: pointer;
  }
  .quantity-controls button:disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  .quantity-display {
    min-width: 25px;
    text-align: center;
    font-weight: 600;
  }
  .item-price {
    flex: 1;
    text-align: left;
    font-weight: 600;
    color: #008CFF;
  }
  .cart-summary {
    margin-top: 25px;
    text-align: left;
    font-size: 1.1em;
    font-weight: 700;
    color: #222;
  }
  .btn-group {
    display: flex;
    justify-content: space-between;
    margin-top: 30px;
  }
  .btn {
    padding: 14px 20px;
    border-radius: 6px;
    font-size: 1.1em;
    border: none;
    cursor: pointer;
    color: white;
    transition: background-color 0.3s ease;
    flex: 1;
    margin: 0 5px;
  }
  .btn-primary {
    background: #28a745;
  }
  .btn-primary:hover {
    background: #218838;
  }
  .btn-secondary {
    background: #007bff;
  }
  .btn-secondary:hover {
    background: #0056b3;
  }
  /* Responsive */
  media(max-width: 600px) {
    .cart-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .item-price {
      text-align: right;
      margin-top: 10px;
    }
    .quantity-controls {
      margin-top: 10px;
    }
    .btn-group {
      flex-direction: column;
    }
    .btn {
      margin: 5px 0;
    }
  }
</style>
</head>
<body>
  <h1>سبد خرید من</h1>
  <div class="cart-container">

    @* محصولات فیزیکی *@
    @if (Model.Products != null && Model.Products.Any())
    {
        foreach (var item in Model.Products)
        {
            <div class="cart-item">
                <div class="item-info">
                    <div class="item-name">@item.Title</div>
                    <div class="item-details">موجودی: @item.AvailableStock عدد</div>
                </div>
                <div class="quantity-controls">
                    <button aria-label="کاهش تعداد" @(item.Quantity <= 1 ? "disabled" : "")>-</button>
                    <div class="quantity-display">@item.Quantity</div>
                    <button aria-label="افزایش تعداد">+</button>
                </div>
                <div class="item-price">@item.TotalPrice.ToString("N0") تومان</div>
            </div>
        }
    }
    else
    {
        <p>هیچ محصولی در سبد خرید وجود ندارد.</p>
    }

    @* سفارش‌های چاپ *@
    @if (Model.PrintRequests != null && Model.PrintRequests.Any())
    {
        foreach (var print in Model.PrintRequests)
        {
            <div class="cart-item">
                <div class="item-info">
                    <div class="item-name">درخواست چاپ @print.ServiceType</div>
                    <div class="item-details">
                        وضعیت: @print.Status
                    </div>
                </div>
                <div class="quantity-controls">
                    <div class="quantity-display" style="min-width: 50px; text-align:center;">1</div>
                </div>
                <div class="item-price">@print.TotalPrice.ToString("N0") تومان</div>
            </div>
        }
    }
    else
    {
        <p>هیچ سفارش چاپی در سبد خرید وجود ندارد.</p>
    }

    @* جمع کل کل سبد خرید *@
    <div class="cart-summary">
        جمع کل:
        @{
            var totalProducts = Model.Products?.Sum(p => p.TotalPrice) ?? 0;
            var totalPrints = Model.PrintRequests?.Sum(p => p.TotalPrice) ?? 0;
            var grandTotal = totalProducts + totalPrints;
        }
        @grandTotal.ToString("N0") تومان
    </div>

    <div class="btn-group">
      <button class="btn btn-secondary" onclick="location.href='/Products'">ادامه خرید</button>
      <button class="btn btn-primary" type="submit">تأیید نهایی و ثبت سفارش</button>
    </div>
  </div>
</body>
</html>
