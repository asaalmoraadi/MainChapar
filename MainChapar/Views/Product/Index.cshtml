@model IEnumerable<MainChapar.Models.Product>

@{
    ViewData["Title"] = "محصولات";
}
aaaaaa
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">

                    <!-- عکس اصلی محصول -->
                    <img src="~/assets/img/product/@item.ImageName" class="card-img-top" style="height:200px; object-fit: cover;" alt="@item.Title" />

                    <div class="card-body">

                        <!-- گالری تصاویر کوچک -->
                        <div class="d-flex gap-2 mb-2">
                            @foreach (var gallery in item.ProductGalleries.Take(3)) // فقط ۳ تا نمایش میدیم
                            {
                                <img src="~/assets/img/gallery/@gallery.ImageName"
                                     width="50" height="50"
                                     style="object-fit: cover; border-radius: 5px;"
                                     alt="گالری @item.Title" />
                            }
                        </div>

                        <!-- مشخصات محصول -->
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">
                            قیمت: <strong>@item.Price?.ToString("N0") تومان</strong><br />
                            تخفیف: @item.Discount ٪<br />
                            موجودی: @item.Qty عدد<br />
                            برچسب‌ها: @item.Tags
                            @(item.IsAvailable == true ? "موجود" : "ناموجود")
                        </p>

                    </div>

                    <!-- دکمه‌ها -->
                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">جزئیات</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
