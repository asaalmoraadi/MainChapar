@model IEnumerable<MainChapar.Models.Product>
@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
@{
    ViewData["Title"] = "محصولات";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/shop_page/styles.css">
    <title>Home</title>

</head>
<body>

    <!-- header + nav = org header-->
    <!--banner 1-->
    <div class="banner">
        <img src="~/assets/shop_page/files/lavazem-tahrir-banner.jpg" alt="">
    </div>

    <!-- categories -->
    <div class="container">
        <!-- Stationery Archive -->
        <div class="box1">
            <a href="@Url.Action("Category", "Product", new { categorySlug = "archiving-supplies" })">
                <img src="~/assets/shop_page/files/home---box1.png" alt="Archiving Supplies">
            </a>
        </div>
        <!-- Writing Tools -->
        <div class="box2">
            <a href="@Url.Action("Category", "Product", new { categorySlug = "writing-tools" })">
                <img id="img1" src="~/assets/shop_page/files/ban1.png" alt="Writing Tools">
            </a>
        </div>
        <div class="row2">
            <!-- Paper and Notebook -->
            <a href="@Url.Action("Category", "Product", new { categorySlug = "paper-and-notebook" })">
                <div class="box3">
                    <img src="~/assets/shop_page/files/box3.png" alt="Paper and Notebook">
                </div>
            </a>
            <!-- Auxiliary Supplies -->
            <a href="@Url.Action("Category", "Product", new { categorySlug = "auxiliary-supplies" })">
                <div class="box4">
                    <img src="~/assets/shop_page/files/box4.png" alt="Auxiliary Supplies">
                </div>
            </a>
        </div>
    </div>

    <p id="info">
        چاپار سامانه آنلاین سفارش خدمات انتشاراتی ویژه دانشگاه ها است . از ثبت سفارش جزوه تا چاپ و تحویل همه چیز را سریع ، دقیق و بدون نیاز به مراجعه حضوری انجام دهید . همراه با بهترین قیمت و پشتیبانی و تضمین کیفیت !
    </p>

    <section class="special-offer-container">
        <div class="top-bar">
            <span class="special-offer">جدید ترین ها</span>
        </div>
        <div class="slider-wrapper">
            <div class="product-list" id="product-list">
                @foreach (var product in Model)
                {
                    <div class="product-card">
                        <div class="product-image-wrapper">
                            <img src="~/assets/img/product/@product.ImageName" alt="@product.Title" />
                        </div>
                        <div class="product-details">
                            <h3 class="product-title">@product.Title</h3>
                            <div class="product-price-info">
                                @* <span class="original-price-strikethrough">@product.OldPrice.ToString("N0") تومان</span> *@
                                <span class="current-price">@product.Price.ToString("N0") تومان</span>
                            </div>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><button class="buy-btn">جزئیات بیشتر</button></a> 
                        </div>
                    </div>
                }
            </div>

        </div>    
    </section>


    <!-- finish-->
