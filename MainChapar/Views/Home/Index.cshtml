    <!-- java script -->
    <script>
        function scrollRight() {
            const slider = document.getElementById('slider');
            const cardWidth = 210 + 16; // عرض کارت + فاصله بین کارت‌ها
            slider.scrollBy({ left: -cardWidth, behavior: 'smooth' });
        }

        function scrollLeft() {
            const slider = document.getElementById('slider');
            const cardWidth = 210 + 16;
            slider.scrollBy({ left: cardWidth, behavior: 'smooth' });
        }
    </script>


   