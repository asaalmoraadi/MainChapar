<h2 id="slider-h2"> کتاب های دسته دوم</h2>

<div class="slider-container">
    <button class="arrow-btn arrow-left" onclick="scrollSlider('left')">&#10095;</button>
    <button class="arrow-btn arrow-right" onclick="scrollSlider('right')">&#10094;</button>

    <div class="slider" style="background-color:white" id="slider">
        @foreach (var book in Model)
        {
            <div class="card">
                <a asp-controller="UsedBook" asp-action="Details" asp-route-id="@book.Id">
                    <img id="card-photo" src="@(book.Images.FirstOrDefault()?.ImagePath ?? "~/assets/img/files/default.png")" alt="@book.Title" />
                    <div class="card-info">
                        <h3>@book.Title</h3>
                        <p>@book.Author</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

