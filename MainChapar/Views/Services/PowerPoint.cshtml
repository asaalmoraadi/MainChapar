@model MainChapar.ViewModel.PowerPointRequestViewModel

@{
    ViewData["Title"] = "درخواست پاورپوینت";
}

@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/assets/powerpoint/styles.css">

<title>سفارش پاورپوینت</title>

</head>
<section class="cooperation-form">
    <h2>سفارش پروژه پاورپوینت</h2>
    <p class="form-title">اطلاعات خودت به همراه فایل برامون قرار بده</p>
    <img class="vector" src="/assets/powerpoint/files/power.png">



   
</section>
@if (!ViewData.ModelState.IsValid)
{
    <div style="
        background-color: #fff4f4;
        border: 1px solid #e44d4d;
        color: #c0392b;
        padding: 15px;
        border-radius: 10px;
        max-width: 600px;
        margin: 20px auto;
        font-size: 14px;">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form class="box" asp-action="PowerPoint" method="post" enctype="multipart/form-data">
   

    <div class="form-group">
        <label>نام:</label>
        <input asp-for="Name" type="text"  placeholder="علی" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>نام خانوادگی:</label>
        <input asp-for="Family" type="text"  placeholder="محمدی" required>
        <span asp-validation-for="Family" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label> عنوان پروژه:</label>
        <input asp-for="ProjectTitle" type="text"  placeholder="طراحی سایت" required>
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label >شماره تلفن:</label>
        <input asp-for="PhoneNumber" type="tel"  required placeholder="09123456789">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group full-width">
        <label >تاریخ:</label>
        <input asp-for="Deadline" type="date"  placeholder="مثلاً 1403/05/25">
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label >فایل:</label>
        <input asp-for="UploadedFile" type="file"  accept=".pdf,.doc,.docx">
    </div>


    <div class="form-group" id="skills">
        <label > توضیحات:</label>
        <textarea asp-for="Description"  placeholder="ساخت پاور پوینت با موضوع طراحی وبسایت شامل 20 اسلاید "></textarea>
    </div>


    <div class="form-group" style="text-align: center;">
        <button type="submit">ارسال فرم</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
