@model MainChapar.Models.Collaboration

@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/collaboration/styles.css">
    <title>فرم همکاری با چاپار</title>
</head>

<section class="cooperation-form">
    <h2>فرم همکاری با چاپار</h2>
    <img class="vector" src="~/assets/collaboration/files/5120253.png" alt="تصویر فرم همکاری">

    <div class="description">
        <p>ما تو چاپار به دانشجوها کمک می‌کنیم تا کاراشونو سریع‌تر، راحت‌تر و با برنامه مشخص انجام بدن</p>
        <p>اگه گرافیستی، تایپیستی یا مهارت کار با پاورپوینت داری</p>
        <p class="highlight">ما تو چاپار بهت نیاز داریم</p>
    </div>

    <p class="form-title">اطلاعاتتو اینجا وارد کن تا بتونیم باهم در ارتباط باشیم</p>
</section>
@if (!ViewData.ModelState.IsValid)
{
    <div style="
        background-color: #fff4f4;
        border: 1px solid #e44d4d;
        color: #c0392b;
        padding: 15px;
        border-radius: 10px;
        max-width: 600px;
        margin: 20px auto;
        font-size: 14px;">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form class="box" action="Create" method="post" enctype="multipart/form-data">
   

    <div class="form-group">
        <label>نام:</label>
        <input asp-for="FirstName" type="text" id="fname"  placeholder="علی" required>
    </div>

    <div class="form-group">
        <label for="lname">نام خانوادگی:</label>
        <input asp-for="LastName" type="text" id="lname"  placeholder="محمدی" required>
    </div>

    <div class="form-group">
        <label>شماره تلفن:</label>
        <input asp-for="Phone" type="tel" id="phone"  required placeholder="09123456789">
    </div>

    <div class="form-group">
        <label>رشته تحصیلی:</label>
        <input asp-for="Major" type="text" id="major" placeholder="کامپیوتر">
    </div>

    <div class="form-group">
        <label>ورودی :</label>
        <input asp-for="EntryYear" type="number" id="entry"  min="1380" max="1404" value="1400">
    </div>

    <div class="form-group">
        <label>مقطع:</label>
        <select asp-for="Level" id="level" >
            <option placeholder="کاردانی">کاردانی</option>
            <option placeholder="کارشناسی">کارشناسی</option>
            <option placeholder="پیوسته">پیوسته</option>
        </select>
    </div>

    <div class="form-group">
        <label>فیلد مورد علاقه شما برای همکاری:</label>
        <select asp-for="Interest" id="interest" >
            <option value="تایپیست">تایپیست</option>
            <option value="طراح">طراح</option>
            <option value="پاورپوینت">پاورپوینت</option>
        </select>
    </div>



    <div class="form-group">
        <label for="resume">رزومه (PDF یا Word):</label>
        <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx">
    </div>



    <div class="form-group" id="skills">
        <label for="skills">مهارت‌های شما:</label>
        <textarea asp-for="Skills" id="skills"  placeholder=" تایپ سریع، طراحی با فتوشاپ، ساخت پاورپوینت حرفه‌ای..."></textarea>
    </div>

    <div class="form-group" style="text-align: center;">
        <button type="submit">ارسال فرم</button>
    </div>
</form>
