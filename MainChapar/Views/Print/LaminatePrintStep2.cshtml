@model MainChapar.ViewModel.Print.LaminatePrintSummaryViewModel
@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
@if (TempData["FormErrors"] != null)
{
    <div class="alert alert-danger" style="white-space: pre-line;">
        <strong>خطاهای اعتبارسنجی:</strong><br />
        @Html.Raw(TempData["FormErrors"].ToString())
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/final_print/styles.css">
    <title>Laminate Print Summary</title>
</head>
<body>

    <!-- start container khadamat chap -->
    <h2>جمع‌بندی نهایی سفارش لمینیت</h2>
    <div class="form-container">

        <div class="form-grid">
            <div class="items">
                <p>جنس کاغذ:</p>
                <p>@Model.PaperType</p>
            </div>
            <div class="items">
                <p>اندازه کاغذ:</p>
                <p>@Model.PaperSize</p>
            </div>
            <div class="items">
                <p>وجه چاپ:</p>
                <p>@Model.PrintSide</p>
            </div>
            <div class="items">
                <p>نوع چاپ:</p>
                <p>@Model.printType</p>
            </div>
            <div class="items">
                <p>نوع چاپ:</p>
                <p>
                    @(Model.printType == "BW" ? "سیاه‌وسفید" :
                        Model.printType == "Color" ? "رنگی" : "نامشخص")
                </p>
            </div>
            <div class="items">
                <p>نوع لمینیت:</p>
                <p>@Model.LaminateType</p>
            </div>
            <div class="items">
                <p>نوع گوشه:</p>
                <p>@Model.CornerType</p>
            </div>
            <div class="items">
                <p>تعداد نسخه:</p>
                <p>@Model.CopyCount</p>
            </div>
            <div class="items">
                <p>مجموع صفحات:</p>
                <p>@Model.TotalPages</p>
            </div>
        </div>

        <div class="items">
            <p>توضیحات:</p>
            <p>@Model.Description</p>
        </div>

      

        <div class="items" id="price">
            <p>قیمت نهایی:</p>
            <p>@Model.TotalPrice.ToString("N0") تومان</p>
        </div>

        <div class="form-button">
            <form asp-action="AddToCartLaminateFromPrint" method="post">
                <button class="add-item" type="submit">تایید و ثبت سفارش</button>
               
            </form>
            <a asp-action="LaminatePrintForm"><button type="button" class="back">بازگشت</button></a>
        </div>
    </div>

    <!-- khadamat -->
    <div class="khadamat">
        <h2>خدمات مشابه</h2>
        <div class="khadamat-boxs">
            <a href="/print/ColorPrintForm" class="boxs" id="box1" style="text-decoration:none; color: inherit; ">
                <img src="/assets/print/files/pallte.png">
                <p>چاپ  رنگی</p>
            </a>

        </div>
        <div class="boxs" id="box2">
            <a href="/print/PlanPrintForm" class="boxs" id="box2" style="text-decoration:none; color: inherit; ">
                <img src="/assets/print/files/print1.png">
                <p>چاپ پلان</p>
            </a>
        </div>
        <div class="boxs" id="box3">
            <a href="/print/BlackWhitePrintForm" class="boxs" id="box3" style="text-decoration:none; color: inherit;">
                <img src="/assets/print/files/print3.png">
                <p>چاپ سیاه سفید</p>
            </a>
        </div>
        </div>
    </div>

</body>
</html>
