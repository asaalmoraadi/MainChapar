@model MainChapar.ViewModel.Print.PlanPrintSummaryViewModel
@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
@if (TempData["FormErrors"] != null)
{
    <div class="alert alert-danger" style="white-space: pre-line;">
        <strong>خطاهای اعتبارسنجی:</strong><br />
        @Html.Raw(TempData["FormErrors"].ToString())
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/final_print/styles.css">
    <title>BWprintform</title>
</head>
<body>

    <!-- start container khadamat chap -->
    <h2>جمع بندی نهایی سفارش</h2>
    <div class="form-container">

        <div class="form-grid">
            <div class="items">
                <p>نوع پرینت :</p>
                <p>@Model.printType</p>
            </div
            <div class="items">
                <p>تعداد :</p>
                <p>@Model.CopyCount</p>
            </div>
            <div class="items">
                <p>صحافی :</p>
                <p>@Model.BindingType</p>
            </div>
            <div class="items">
            <p>توضیحات  :</p>
            <p>@Model.SizeOrScaleDescription</p>
            </div>

        </div>
        


        <div class="form-button">


            <form asp-action="AddToCartPlanFromPrint" method="post">
                <button class="add-item" type="submit">تایید و ثبت سفارش</button>
               
            </form>
             <a asp-action="PlanPrintForm"><button class="back">بازگشت</button></a>
        </div>


        <!--end container -->
    </div>




    <!-- khadamat -->

    <div class="khadamat">
        <h2>خدمات مشابه</h2>
        <div class="khadamat-boxs">
              <div class="boxs" id="box1">
                    <a href="/print/ColorPrintForm" class="boxs" id="box1" style="text-decoration:none; color: inherit; ">
                        <img src="/assets/print/files/pallte.png">
                        <p>چاپ  رنگی</p>
                    </a>

                </div>
                <div class="boxs" id="box2">
                    <a href="/print/BlackWhitePrintForm" class="boxs" id="box2" style="text-decoration:none; color: inherit;">
                        <img src="/assets/print/files/print3.png">
                        <p>چاپ سیاه سفید</p>
                    </a>
                </div>


        </div>

</body>
</html>