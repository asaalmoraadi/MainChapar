@model MainChapar.ViewModel.Print.PlanPrintRequestViewModel

@{
    ViewData["Title"] = "فرم درخواست چاپ سیاه و سفید";
}
@{
    Layout = "~/Views/Shared/_newLayout1.cshtml";
}
@if (TempData["FormErrors"] != null)
{
<div class="alert alert-danger" style="white-space: pre-line;">
    <strong>خطاهای اعتبارسنجی:</strong><br />
    @Html.Raw(TempData["FormErrors"].ToString())
</div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/print/styles.css">
    <title>Planprintform</title>
</head>
<body>
    <!-- order box -->

    <p class="path_txt">مسیر شما &gt; صفحه اصلی &gt; خدمات چاپ &gt; چاپ دیجیتال پلان</p>
    <!-- start container khadamat chap -->
    <form asp-action="BlackWhitePrintForm" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-container">
            <!--soton 1 (az rast)-->
            <div class="image-box">
                <img src="/assets/print/files/print3.png" alt="چاپ دیجیتال">
                <p>چاپ دیجیتال پلان</p>
            </div>

            <!--soton 2 (4ta field)-->
            <div class="form-grid">

                <!--field 1-->
                <div class="form-group">
                    <label>جنس کاغذ</label>
                    <select asp-for="PaperType" asp-items="@(new List<SelectListItem> {
                             new SelectListItem { Text = " ساده", Value="ساده" },
                            new SelectListItem { Text="گلاسه" , Value="گلاسه" },
                            new SelectListItem { Text="گلاسه سنگین" , Value="گلاسه سنگین" }
                            })">
                    </select>
                    @Html.ValidationMessageFor(m => m.PaperType, "", new { @class = "text-danger" })
                </div>

                <!--field 2-->
                <div class="form-group">
                    <label>نوع چاپ</label>
                    <select asp-for="printType" asp-items="@(new List<SelectListItem> {
                             new SelectListItem { Text = "رنگی", Value="Color" },
                            new SelectListItem { Text="سیاه و سفید" , Value="Bw" },
                            })">
                        <option value="">انتخاب نوع چاپ</option>
                    </select>
                    @Html.ValidationMessageFor(m => m.printType, "", new { @class = "text-danger" })
                </div>

                <!--field 3-->
                <div class="form-group">
                    <label>تیراژ</label>
                    <input asp-for="CopyCount" id="tiraj" type="number" min="1" />
                    @Html.ValidationMessageFor(m => m.CopyCount, "", new { @class = "text-danger" })
                </div>

                <!--field 4-->
                <div class="form-group">
                    <label>نوع صحافی</label>
                    <select asp-for="BindingType" class="form-control">
                        <option value="هیچ‌کدام">هیچ‌کدام</option>
                        <option value="سیمی">سیمی</option>
                        <option value="طلق و شیرازه">طلق و شیرازه</option>
                        <option value="منگنه">منگنه</option>
                    </select>
                    <span asp-validation-for="BindingType" class="text-danger"></span>
                </div>

                <!--field 5-->
                <div class="form-group">
                    <label>اندازه نقشه یا مقیاس</label> 
                    <textarea asp-for="SizeOrScaleDescription" placeholder="توضیحات اضافه مثل موقعیت نقشه، حاشیه، یا تنظیمات خاص" class="form-control" rows="3" style="
                             width: 70%;
                             max-width: 100%;
                             height: 120px;
                             resize: none; /* جلوگیری از تغییر اندازه */
                             padding: 10px;
                             font-size: 14px;
                             color: #ffffff;
                             border: 1px solid #ffffff;
                             border-radius: 8px;
                             background-color: #ffffff;
                             box-shadow: inset 0 1px 3px #ffffff;
                             font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"></textarea>
                    <span asp-validation-for="SizeOrScaleDescription" class="text-danger"></span>

                    @Html.ValidationMessageFor(m => m.SizeOrScaleDescription, "", new { @class = "text-danger" })
                </div>

                <!--field 6-->
                <div class="form-group">
                    <label>توضیحات</label>
                    <textarea asp-for="AdditionalDescription" placeholder="توضیحات اضافه مثل موقعیت نقشه، حاشیه، یا تنظیمات خاص" class="form-control" rows="3" style="
                             width: 90%;
                             max-width: 100%;
                             height: 120px;
                             resize: none; /* جلوگیری از تغییر اندازه */
                             padding: 10px;
                             font-size: 14px;
                             color: #ffffff;
                             border: 1px solid #ffffff;
                             border-radius: 8px;
                             background-color: #ffffff;
                             box-shadow: inset 0 1px 3px #ffffff;
                             font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"></textarea>
                    <span asp-validation-for="AdditionalDescription" class="text-danger"></span>
                </div>

                <!-- radif jadid baray upload file-->
                <!--field 7-->
                <div class="form-group upload-centered">
                    <label for="fileUpload">آپلود فایل</label>
                    <input asp-for="Files" type="file" multiple id="fileUpload" />
                    @Html.ValidationMessageFor(m => m.Files, "", new { @class = "text-danger" })
                </div>

                
            </div>
           

            <!--end container -->

        </div>


        <div class="form-button">
            <button type="submit" class="add-item">افزودن به سبد خرید</button>
        </div>

        <!-- khadamat -->

        <div class="khadamat">
            <h2>خدمات مشابه</h2>
            <div class="khadamat-boxs">
                <div class="boxs" id="box1">

                    <img src="/assets/print/files/pallte.png">
                    <p>چاپ  رنگی</p>

                </div>
                <div class="boxs" id="box2">

                    <img src="/assets/print/files/print3.png">
                    <p>چاپ سیاه سفید</p>
                </div>
              

            </div>

    </form>
           
</body>
</html>