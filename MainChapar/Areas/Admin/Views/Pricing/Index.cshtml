
@model MainChapar.ViewModel.Admin.PricingIndexViewModel

@{
    ViewData["Title"] = "لیست قیمت‌ها";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>داشبورد قیمت‌ها</title>
    <link rel="stylesheet" href="/assets/category/styles - Pricing.css">
</head>
<body>

    <div class="category-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>انتشارات دانشگاه</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="index" class="active"> صفحه اصلی فروشگاه</a></li>
                    <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="index" class="active"> داشبورد اصلی</a></li>
                    <li><a asp-area="Admin" asp-controller="PrintRequests" asp-action="index" class="active"> درخواست های ثبت شده</a></li>
                    <li><a asp-area="Admin" asp-controller="order" asp-action="index" class="active"> مدیریت سفارشات</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <div class="top-table">
                <h1>قیمت چاپ معمولی</h1>
                <a asp-action="CreatePricing"><button id="addTaskButton">افزودن قیمت چاپ معمولی</button></a>
            </div>

            <div id="taskList">
                <table>
                    <thead>
                        <tr>
                            <th>نوع چاپ</th>
                            <th>نوع کاغذ</th>
                            <th>سایز کاغذ</th>
                            <th>دو رو</th>
                            <th>قیمت هر صفحه</th>
                            <th>فعال؟</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PrintPricings)
                        {
                            <tr>
                                <td>@(item.PrintType == "BW" ? "سیاه و سفید" : "رنگی")</td>
                                <td>@item.PaperType</td>
                                <td>@item.PaperSize</td>
                                <td>@item.PrintSide</td>
                                <td>@item.PricePerPage تومان</td>
                                <td>@(item.IsAvailable ? "بله" : "خیر")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><button class="edit-btn">ویرایش</button></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('آیا مطمئنید؟')"><button class="delete-btn">حذف</button></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="top-table mt-5">
                <h1>قیمت چاپ لمینیت</h1>
                <a asp-action="CreateLaminatePricing"><button id="addTaskButton">افزودن قیمت لمینیت</button></a>
            </div>

            <div id="taskList">
                <table>
                    <thead>
                        <tr>
                            <th>نوع چاپ</th>
                            <th>نوع کاغذ</th>
                            <th>سایز کاغذ</th>
                            <th>وجه چاپ</th>
                            <th>نوع لمینیت</th>
                            <th>قیمت هر صفحه</th>
                            <th>فعال؟</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LaminatePricings)
                        {
                            <tr>
                                <td>@(item.PrintType == "BW" ? "سیاه و سفید" : "رنگی")</td>
                                <td>@item.PaperType</td>
                                <td>@item.PaperSize</td>
                                <td>@item.PrintSide</td>
                                <td>@item.LaminateType</td>
                                <td>@item.PricePerPage تومان</td>
                                <td>@(item.IsAvailable ? "بله" : "خیر")</td>
                                <td>
                                    <a asp-action="EditLaminate" asp-route-id="@item.Id"><button class="edit-btn">ویرایش</button></a>
                                    <a asp-action="DeleteLaminate" asp-route-id="@item.Id" onclick="return confirm('آیا مطمئنید؟')"><button class="delete-btn">حذف</button></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </main>

    </div>

</body>
</html>


