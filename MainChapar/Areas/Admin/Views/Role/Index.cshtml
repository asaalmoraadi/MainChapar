@model IEnumerable<MainChapar.Models.DTO.RoleDTO>

<a href="/Admin/Role/Create" class="btn btn-primary">Create New Role </a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a href="/Admin/Role/Edit/@role.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Admin/Role/Delete/@role.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>